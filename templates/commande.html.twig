{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<h1> Commande </h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Quantité</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in produits %}
                <tr>
                    <td><a href="{{ path('product.show', {id : produit.id}) }}">{{ produit.id }}</a></td>
                    <td><a href="{{ path('product.show', {id : produit.id}) }}">{{ produit.name }}</a></td>
                    <td><a href="{{ path('product.show', {id : produit.id}) }}"> 1 </a></td>
                    <td><a href="{{ path('product.show', {id : produit.id}) }}">{{ produit.price }} €</a></td>
                </tr>
            {% endfor %}

            <tr>
                <th></th>
                <th></th>
                <th>Total de la commande :</th>
                <th>{{ totalPanier }} €</th>
            </tr>
        </tbody>
    </table>


{% endblock %}